{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "hugo server",
			"type": "shell",
			"command": "hugo server --watch --verbose --cleanDestinationDir --disableFastRender --buildDrafts",
			"problemMatcher": []
		},
		{
			"label": "Open Local Hugo",
			"type": "shell",
			"command": "Start-Process http://localhost:1313/",
			"problemMatcher": [],
		},
		{
			"label": "New Hugo Post",
			"type": "shell",
			"command": "hugo new --kind post posts/${input:postID}.md",
			"problemMatcher": [],
		}
	],
	"inputs": [
		{
			"id": "postID",
			"description": "ID of a post archetype",
			"type": "promptString"
		}
	]
}